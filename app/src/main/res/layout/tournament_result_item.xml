                                android:background="@drawable/audience1"
                                android:scaleX="0.7"
                                android:scaleY="0.75" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                        android:id="@+id/fiftyfifty"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
