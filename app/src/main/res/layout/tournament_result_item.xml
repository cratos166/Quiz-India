                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ubuntu"
                        android:gravity="left"
                        android:text="+40"
                        android:textColor="@color/green"
                        android:textSize="8dp" />

                </LinearLayout>

                <LinearLayout
